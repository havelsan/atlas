@*@model Core.Modules.Tibbi_Surec.Hasta_Cagri_Modulu.SugeryModel

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN"
          "http://www.w3.org/TR/html4/strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Atlas Atlas</title>

    <meta name="author" content="Atlas HBYS" />
    <style type="text/css">
        .header {
            height: 119px;
            width: 100%;
        }

        .fltLeft {
            float: left;
            display: inline;
        }

        .fltRight {
            float: right;
            display: inline;
        }

        .header img {
        }

        .sollogo {
            width: 15%;
            text-align: center;
        }

        .saglogo {
            width: 15%;
            text-align: center;
        }

        .kurum {
            width: 70%;
            color: #325770;
            padding: 10px 0px 0px;
            text-align: center;
            font-size: 25px;
            margin-left: 265px;
        }

            .kurum span {
                font-size: 30px;
                font-weight: bold;
            }

        .doktor {
            text-align: center;
            color: #202020;
            font-size: 55px;
            font-weight: bold;
            padding: 0px 0px;
            margin: 20px 20px;
        }

        .aktifhasta {
            background: #00ACF1;
            border: 1px solid #00ACF1;
            color: #ffffff;
            font-size: 75px;
            text-align: center;
            padding: 10px 10px;
            border-radius: 20px;
            margin: 10px 10px;
            font-weight: bold;
            text-shadow: 2px 2px 4px #080808;
        }

        .aktifoncelik {
            background: #4276a4;
            border: 1px solid #4276a4;
            color: #ffffff;
            font-size: 45px;
            text-align: center;
            padding: 10px 10px;
            border-radius: 20px;
            margin: 10px 10px;
            font-weight: bold;
            text-shadow: 2px 2px 4px #080808;
        }

        .siradakihasta {
            /* url("siradakicizgi_V2.png") Böyle bir dosya yok A.Ş.: 07.06.2017 */
            background: no-repeat scroll center bottom transparent;
            height: 50px;
            color: #083045;
            padding: 20px 0px;
            font-size: 50px;
            font-weight: bold;
        }

        .siranumarasi {
            width: 20%;
            text-align: left;
        }

        .hastaadi {
            width: 80%;
            text-indent: 50px;
        }

        .bilgilendirme {
            border: 3px solid #4276a4;
            border-radius: 20px;
            font-size: 40px;
            height: 46px;
            font-weight: bold;
            color: #265370;
            text-align: left;
            width: 100% - 15;
            padding: 0px 10px;
            Margin: 10px 0px;
        }

        .saatbox {
            height: 110px;
            text-align: center;
            color: #265370;
            width: 100% - auto;
            bottom: 60px;
            position: absolute;
            padding: 10px 10px;
        }

        .saatboxinbox {
            height: 110px;
            color: #265370;
            width: 100% - 100;
        }

        #saat {
            border: 5px solid #4276a4;
            font-size: 75px;
            height: 100%;
            font-weight: bold;
            color: #265370;
            text-align: center;
            width: 100% - 5;
            border-radius: 30px;
        }

        .altlogo {
            /*border: 1px solid #b9d393;*/
            font-size: 20px;
            height: 57px;
            font-weight: bold;
            color: #265370;
            text-align: center;
            position: absolute;
            bottom: 0px;
            width: 100%;
        }

            .altlogo img {
                margin: 5px;
            }
    </style>
    <script>

        document.addEventListener("DOMContentLoaded", function (event) {
            setInterval(function () {
                 location.reload();
            }, 5000);
        });


    </script>
</head>
<body >
    <div class="header">
        <div class="sollogo fltLeft">
            <img src="~/Content/saglik_logo_V2.png" />
        </div>
        <div class="saglogo fltRight">
            <img src="~/Content/saglik_logo_V2.png" />
        </div>
        <div class="kurum">
            <span> @Model.hospitalName</span>
        </div>
    </div>
    <div class="doktor">
        Ameliyatda Olan Hastaların Listesi
    </div>
    @for (int i = 0; i < Model.patients.Count; i++)
    {
        <div class="aktifoncelik flash">@Model?.patients[i]?.Name - <span>@Model?.patients[i]?.SurName</span></div>
    }


    <div class="altlogo">

    </div>
</body>
</html>*@